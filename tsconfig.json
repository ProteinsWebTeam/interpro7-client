{
  "compilerOptions": {
    "sourceMap": true,
    "moduleResolution": "Node",
    "module": "es2020",
    "target": "ES6",
    "lib": [
      "es2019",
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "declaration": false,
    "experimentalDecorators": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/*",
        "public/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": [
    "src/**/*",
    "node_modules/@nightingale-elements/*/src/*"
  ]
}